{
  "manifest_version": 3,
  "name": "Style Macro DevTools",
  "version": "0.0.1",
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content-script.js"],
    "all_frames": true,
    "run_at": "document_idle"
  }],
  "permissions": ["tabs"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  }
}
